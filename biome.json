{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 110
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "linter": {
    "rules": {
      "complexity": { "useLiteralKeys": "off" },
      "style": {
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "off"
      }
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
