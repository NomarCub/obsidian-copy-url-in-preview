{
  "name": "copy-url-in-preview",
  "version": "1.11.2",
  "description": "Image context menus plugin for Obsidian (https://obsidian.md): Copy to clipboard, Open in default app, Show in system explorer, Reveal file in navigation, Open in new tab, Rename.",
  "main": "main.js",
  "engines": {
    "node": ">=22.18"
  },
  "scripts": {
    "dev": "node esbuild.config.mts",
    "build": "node esbuild.config.mts production",
    "check": "npm run type-check && npm run lint && npm run format",
    "type-check": "tsc -noEmit",
    "lint": "biome lint && eslint",
    "lint:fix": "biome lint --fix && eslint --fix",
    "format": "biome format",
    "format:fix": "biome format --write",
    "version": "node version-bump.mts"
  },
  "author": "NomarCub",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@eslint/js": "^9.33.0",
    "@types/node": "~22.17.0",
    "builtin-modules": "^4.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "i18next": "^23.11.5",
    "obsidian": "1.8.7",
    "obsidian-typings": "3.15.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
